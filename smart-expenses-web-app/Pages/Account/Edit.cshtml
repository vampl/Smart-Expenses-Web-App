@page
@model smart_expenses_web_app.Pages.Account.EditModel

@{
    ViewData["Title"] = "Редагувати рахунок";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card mx-auto mt-5">
                <h4 class="card-header">Рахунок</h4>
                
                <div class="card-body">
                    <div class="card-text">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group visually-hidden">
                                <label asp-for="Account.Id" class="control-label"></label>
                                
                                <input asp-for="Account.Id" class="form-control" value="@Model.Id"/>
                            </div>
                            
                            <div class="form-group visually-hidden">
                                <label asp-for="Account.UserId" class="control-label"></label>
                                                                                        
                                <input asp-for="Account.UserId" class="form-control" value="@Model.UserId"/>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Account.AccountType" class="control-label"></label>
                                
                                <select asp-for="Account.AccountType" class="form-control" asp-items="Model.AccountTypesList"></select>
                                
                                <span asp-validation-for="Account.AccountType" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Account.Title" class="control-label"></label>
                                
                                <input asp-for="Account.Title" class="form-control" />
                                
                                <span asp-validation-for="Account.Title" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Account.Amount" class="control-label"></label>
                                
                                <input type="number" step="0.01" asp-for="Account.Amount" class="form-control" />
                                
                                <span asp-validation-for="Account.Amount" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Account.CurrencyCode" class="control-label"></label>
                                
                                <select asp-for="Account.CurrencyCode" class="form-control" asp-items="Model.CurrencyCodesList"></select>
                                
                                <span asp-validation-for="Account.CurrencyCode" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <input type="submit" value="Зберегти" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card-footer">
                    <a asp-page="Index">Повернутись назад</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
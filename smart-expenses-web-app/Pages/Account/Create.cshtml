@model smart_expenses_web_app.Pages.Account.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.UserId" class="control-label"></label>
                <select asp-for="Account.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Account.AccountType" class="control-label"></label>
                <select asp-for="Account.AccountType" class="form-control"></select>
                <span asp-validation-for="Account.AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Title" class="control-label"></label>
                <input asp-for="Account.Title" class="form-control" />
                <span asp-validation-for="Account.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Amount" class="control-label"></label>
                <input asp-for="Account.Amount" class="form-control" />
                <span asp-validation-for="Account.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.CurrencyCode" class="control-label"></label>
                <select asp-for="Account.CurrencyCode" class="form-control"></select>
                <span asp-validation-for="Account.CurrencyCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


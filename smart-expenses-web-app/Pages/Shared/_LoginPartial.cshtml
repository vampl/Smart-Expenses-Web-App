@using Microsoft.AspNetCore.Identity
@using smart_expenses_web_app.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="nav justify-content-end">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item text-end">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            Вітаю, @UserManager.GetUserName(User)!
        </a>
    </li>
    <li class="nav-item text-end">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Вийти</button>
        </form>
    </li>
}
else
{
    <li class="nav-item text-end">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">
            Реєстрація
        </a>
    </li>
    <li class="nav-item text-end">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">
            Вхід
        </a>
    </li>
}
</ul>
